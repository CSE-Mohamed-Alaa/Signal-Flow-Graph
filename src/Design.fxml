                  <TextField fx:id="output" disable="true" GridPane.rowIndex="3" />
                  <Label prefHeight="43.0" prefWidth="214.0" text="Overall Transfer Function :" GridPane.rowIndex="2" />
               </children>
            </GridPane>
         </bottom>
      </BorderPane>
   </right>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <bottom>
         </bottom>
         <center>
            <ScrollPane BorderPane.alignment="CENTER">
               <content>
                  <Group fx:id="group" />
               </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
